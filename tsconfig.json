{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2016",
        "sourceMap": true,
        "outDir": "out",
        "declaration": false,

        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strictFunctionTypes": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es6",
            "es2016",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "test/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}